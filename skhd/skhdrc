# start yabai
ctrl + shift + cmd - s : brew services start yabai && say "yabai start"
ctrl + shift + cmd - q : brew services stop yabai && say "yabai stop"

# stop yabai

# # move windows
ctrl + shift + cmd - up : yabai -m window --warp north
ctrl + shift + cmd - right : yabai -m window --warp east
ctrl + shift + cmd - down : yabai -m window --warp south
ctrl + shift + cmd - left : yabai -m window --warp west

# rotate layout clockwise
ctrl + cmd - r :  yabai -m space --rotate 270
# rotate layout clockwise
ctrl + cmd - y :  yabai -m space --mirror y-axis
# flip along y-axis
ctrl + cmd - y :  yabai -m space --mirror y-axis
# flip along y-axis
ctrl + cmd - x :  yabai -m space --mirror x-axis
# balance out tree of windows
ctrl + cmd - b :  yabai -m space --balance

# maximize window
ctrl + cmd - m :  yabai -m window --toggle zoom-fullscreen

# # focus window  
ctrl + cmd - up : yabai -m window --focus north
ctrl + cmd - right : yabai -m window --focus east
ctrl + cmd - down : yabai -m window --focus south
ctrl + cmd - left : yabai -m window --focus west

# # fast focus desktop
ctrl + alt + cmd - left : yabai -m window --space prev
ctrl + alt + cmd - right : yabai -m window --space next

# # increase window size
# ctrl + alt - a : yabai -m window --resize left:50:0
# ctrl + alt - w : yabai -m window --resize top:0:50
# ctrl + alt - d : yabai -m window --resize right:50:0
# ctrl + alt - s : yabai -m window --resize bottom:0:50

# # decrease window size
# shift + alt - a : yabai -m window --resize left:-50:0
# shift + alt - w : yabai -m window --resize top:0:-50
# shift + alt - d : yabai -m window --resize right:-50:0
# shift + alt - s : yabai -m window --resize bottom:0:-50

# ctrl + shift + alt - a : yabai -m window --display next && yabai -m display --focus next
# ctrl + shift + alt - d : yabai -m window --display prev && yabai -m display --focus prev